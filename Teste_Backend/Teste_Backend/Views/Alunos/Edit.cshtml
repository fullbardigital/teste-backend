@model TbAluno;
@{
    ViewData["Title"] = "Editar";
}
<div>
    <a asp-action="Index" class="btn btn-default">Voltar</a>
</div>
<hr />
<div class="title">
    <h2> Editar Aluno</h2>
</div>
<div class="row">
    <form asp-action="Edit" class="col-md-3">
        <div>
            <input type="hidden" asp-for="IdAluno" />
            <div class="form-group">
                <label>Nome</label>
                <input class="form-control" asp-for="Nome" type="text" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>RA</label>
                <input class="form-control" asp-for="Ra" type="text" />
                <span asp-validation-for="Ra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Curso</label>
                <select asp-for="IdCurso" class="form-control" asp-items="ViewBag.Cursos"></select>
            </div>
            <div class="form-group">
                <label>Período</label>
                <select asp-for="IdPeriodo" class="form-control" asp-items="ViewBag.Periodos"></select>
            </div>

        </div>
        <div>
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
</div>
<hr />

<a role="button" data-toggle="collapse" href="#delete-area">
    Excluir
</a>
<div class="collapse" id="delete-area">
    <div class="well col-md-4">
        <div>
            <span>Você tem certeza de que quer excluir este registro?</span>
        </div>
        <input class="btn btn-danger" type="button" value="Excluir" onclick="location.href='@Url.Action("Delete", "Alunos", new { id = Model.IdAluno})'" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}